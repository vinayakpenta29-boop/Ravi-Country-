<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Toolbar inside fragment for 3-dots menu -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/expensesToolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/background_dark"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:contentInsetStartWithNavigation="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Big Curved Box with Two Sub-boxes -->
    <LinearLayout
        android:id="@+id/expenseInputCard"
        android:orientation="vertical"
        android:background="@drawable/pista_with_border"
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp">

        <!-- Sub-box 1: Category -->
        <EditText
            android:id="@+id/inputCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="54dp"
            android:background="@drawable/curved_light_box"
            android:textColor="@color/input_text"
            android:hint="Expenses Category"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_bold"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="12dp"
            android:textColorHint="@color/grey_hint" />

        <!-- Sub-box 2: Amount -->
        <EditText
            android:id="@+id/inputAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="54dp"
            android:background="@drawable/curved_light_box"
            android:textColor="@color/input_text"
            android:hint="Expense Amount"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_bold"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="numberDecimal"
            android:textColorHint="@color/grey_hint" />
    </LinearLayout>

    <!-- Scrollable expenses list -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/expensesListLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <!-- Add Expense Button fixed at bottom -->
    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ADD EXPENSE"
        android:textAllCaps="true"
        android:textColor="@color/white_text_for_button"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"
        android:background="@drawable/curved_orange_button"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="18dp" />

</LinearLayout>
