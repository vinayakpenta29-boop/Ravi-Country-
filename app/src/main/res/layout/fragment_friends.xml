<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top bar: Online Payment toggle + Toolbar 3-dots -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="0dp"
        android:paddingEnd="0dp">

        <!-- Online Payment toggle (left side) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvOnlinePaymentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online Payment"
                android:textColor="@color/input_text"
                android:textSize="14sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchOnlinePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Toolbar inside fragment for 3-dots menu (right side) -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/friendsToolbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/background_dark"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </LinearLayout>

    <!-- Friend Name Input -->
    <EditText
        android:id="@+id/inputName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:background="@drawable/curved_box"
        android:textColor="@color/input_text"
        android:hint="Friend's Name"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/grey_hint" />

    <!-- ORANGE ADD FRIEND Button -->
    <Button
        android:id="@+id/btnAddFriend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ADD FRIEND"
        android:textAllCaps="true"
        android:textColor="@color/white_text_for_button"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"
        android:background="@drawable/curved_orange_button"
        android:layout_marginBottom="18dp" />

    <!-- FRIENDS LIST -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/friendsListLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</LinearLayout>
