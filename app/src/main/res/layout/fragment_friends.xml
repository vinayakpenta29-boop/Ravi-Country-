<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Add Friend Section -->
    <EditText
        android:id="@+id/inputName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/curved_box"
        android:textColor="@color/input_text"
        android:hint="Friend's Name"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"
        android:padding="14dp"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/grey_hint"
        />

    <!-- Add Friend Button (dynamically moved below list if there are friends) -->
    <Button
        android:id="@+id/btnAddFriend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ADD FRIEND"
        android:textAllCaps="true"
        android:textColor="@color/input_text"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"
        android:background="@drawable/curved_orange_button"
        android:layout_marginBottom="18dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/friendsListLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
</LinearLayout>
